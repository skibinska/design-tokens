{
  "source": ["tokens/**/*.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "buildPath": "generatedTokens/",
      "files": [
        {
          "destination": "css/variables.css",
          "format": "css/variables",
          "options": {
            "outputReferences": true
          }
        }
      ]
    },
    "scss": {
      "transformGroup": "scss",
      "buildPath": "generatedTokens/",
      "files": [{
        "destination": "scss/variables.scss",
        "format": "scss/variables",
        "options": {
          "outputReferences": true
        }
      }]
    },
    "js": {
      "transformGroup": "js",
      "buildPath": "generatedTokens/",
      "files": [{
        "destination": "js/variables.js",
        "format": "javascript/es6"
      }]
    }
  }
}