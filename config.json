{
  "source": ["tokens/**/*.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "buildPath": "generatedTokens/",
      "files": [
        {
          "destination": "css/variables.css",
          "format": "css/variables"
        }
      ]
    },
    "scss": {
      "transformGroup": "scss",
      "buildPath": "generatedTokens/",
      "files": [{
        "destination": "scss/variables.scss",
        "format": "scss/variables"
      }]
    },
    "js": {
      "transformGroup": "js",
      "buildPath": "generatedTokens/",
      "files": [{
        "destination": "js/variables.js",
        "format": "javascript/es6"
      }]
    }
  }
}